body
  ui-view
    header.row
      h1.text-center.col-md-6.col-md-offset-3 Find Recipes
    section.row
      form
        .form-group.col-md-6.col-md-offset-3
          label.sr-only for="keywords"  Keywords
          input.form-control autofocus="" name="keywords" ng-model="keywords" placeholder=("Recipe name e.g. Baked Potato") type="text"
        .form-group.col-md-6.col-md-offset-3.text-center
          button.btn.btn-primary.btn-lg ui-sref="recipes({keywords:keywords})"  Search
          button.btn.btn-info.btn-lg ui-sref="recipes.new"  New Recipeâ€¦
    section.row ng-if="recipes"
      ul.list-unstyled
        li ng-repeat=("recipe in recipes")
          section.well.col-md-6.col-md-offset-3
            h1.h3.col-md-6.text-right style=("margin-top: 0")
              a ui-sref="recipes.recipe({recipeId: recipe.id})"
                span ng-bind="recipe.name"
            .col-md-6
              button.btn.btn-info ui-sref=("recipes.recipe.edit({ recipeId:recipe.id })")  Edit
